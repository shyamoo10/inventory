<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    .container {
        display: flex;}

    .links {
        display: flex;
        flex-direction: column;
    }
</style>

<body>
    <div class="container">


        <div class="links">
            <a href="/categories/create">Create Category</a>
            <a href="/categories/items/create">Create Items</a>
        </div>
        <div class="content">


            <% if (allcategories) { %>
                <h1>
                    <%= title %>
                </h1>
                <ul>
                    <% allcategories.forEach(function(category) { %>
                        <li><a href="<%= category.url %>">
                                <%= category.name %>
                            </a></li>
                        <% }); %>
                </ul>
                <% } %>
        </div>
    </div>
</body>

</html>